      //- Contact form
      $(document).ready(function (){

        var contactFormVisible = false;
        window.openContactForm = function() {
          if(contactFormVisible == true) { return; }

          $("#contact-us-overlay").fadeIn(400, function(){
            $("#contact-us-form").show("fast");

            contactFormVisible = true;

            $("#contact-us-form button.submit, #contact-us-form input").removeAttr("disabled", "disabled");
            $("#contact-us-form input").val("");
          });
        };

        $("#contact-us-form button.submit").click(function() {

          var email = $("#contact-us-form input").val();

          $.ajax({
            type: "GET",
            url: "https://www.adefy.com/bounce_email",
            data: { email: encodeURIComponent(email) },
            success: function() {
              $("#contact-us-form .success-text").text("Submitted!");
              $("#contact-us-form .error-text").text("");

              ga('send', 'event', 'Submit', 'Contact', 'Email');

              $("#contact-us-form button.submit, #contact-us-form input").attr("disabled", "disabled");
            },
            error: function() {
              $("#contact-us-form .success-text").text("");
              $("#contact-us-form .error-text").text("An error occured ;(");
            }
          });
        });

        $("#contact-us-form button.close").click(function() {
          if(contactFormVisible == false) { return; }

          $("#contact-us-form").hide(0, function(){
            $("#contact-us-overlay").fadeOut(400);
            contactFormVisible = false;
          });
        });

      });
